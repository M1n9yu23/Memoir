<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/memoDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="2025년 3월 23일 일요일"
        app:layout_constraintBottom_toTopOf="@id/memoDateNumber"
        app:layout_constraintStart_toEndOf="@id/memoDateNumber"
        app:layout_constraintTop_toTopOf="@id/memoDateNumber" />

    <TextView
        android:id="@+id/memoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="나의 사랑스러운 가족들"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/memoDate" />

    <ImageView
        android:id="@+id/memoMainImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/memoDateNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        tools:text="29"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/memoDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="목"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/memoDateNumber"
        app:layout_constraintStart_toStartOf="@id/memoDateNumber"
        app:layout_constraintTop_toBottomOf="@id/memoDateNumber" />

</androidx.constraintlayout.widget.ConstraintLayout>